<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tituloEntrenamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrenamiento Title"
                android:layout_marginLeft="30dp"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/chopin"
                android:textStyle="bold"/>

            <Chronometer
                android:id="@+id/cronometro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/chopin"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/additional_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:fontFamily="@font/chopin"
                android:textStyle="bold">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSeries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:fontFamily="@font/chopin"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/acabarEntrenamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acabar entrenamiento"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/red"
                android:fontFamily="@font/chopin"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>