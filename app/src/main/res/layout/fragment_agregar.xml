<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Agregar">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:src="@drawable/logoidunn" />

    <Button
        android:id="@+id/agregarEntrenamientoButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:text="Agregar entrenamiento"
        android:fontFamily="@font/chopin"
        android:textStyle="bold"
        app:cornerRadius="10dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:src="@android:drawable/progress_horizontal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus entrenamientos"
        android:textSize="24dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chopin"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/recycler_item" />

</LinearLayout>